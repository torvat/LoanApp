<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="no.zdata.torva.houseingloanapp.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Amount: "/>
    <TextField fx:id="amount" />
    <Label text="Duration: "/> <TextField fx:id="duration"/>
    <Label fx:id="invalidDuration"/>
    <Button text="Calculate" onAction="#calculateButtonClick"/>
    <Label fx:id="output"/>
    <Button text="Save" onAction="#saveToDatabase"/>
</VBox>
